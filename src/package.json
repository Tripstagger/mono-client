{
  "name": "tripstagger-mono-client",
  "private": true,
  "license": "MIT",
  "version": "1.0.0",
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/eslint-parser": "7.17.0",
    "@babel/plugin-proposal-class-properties": "7.16.7",
    "@babel/plugin-proposal-object-rest-spread": "7.17.3",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "babel-loader": "^8.2.4",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-css": "^0.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint-webpack-plugin": "^2.6.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "patch-package": "^6.4.7",
    "prettier": "^2.6.2",
    "stylelint": "^14.6.1",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^4.2.0",
    "yarn-upgrade-all": "^0.7.1",
    "webpack": "^5.71.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4",
    "react-refresh": "^0.12.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.5",
    "html-webpack-plugin": "^5.5.0"
  },
  "workspaces": [
    "packages/app",
    "packages/auth",
    "packages/core",
    "packages/expo",
    "packages/next"
  ],
  "scripts": {
    "dev:expo": "yarn workspace @tripstagger/expo start:expo",
    "dev:next": "yarn workspace @tripstagger/next dev",
    "build": "cd packages/next && yarn build",
    "postinstall": "patch-package",
    "lint": "eslint \"packages/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"packages/**/*.{ts,tsx}\"",
    "format": "prettier --write \"packages/**/*.{ts,tsx,html,css,scss}\" --config ./.prettierrc",
    "prepare": "cd .. && husky install src/.husky",
    "up": "yarn-upgrade-all"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx,html,css,scss}": "yarn format",
    "packages/**/*.{ts,tsx}": "yarn lint:fix"
  },
  "resolutions": {
    "babel-preset-expo": "^8.5.1"
  }
}
